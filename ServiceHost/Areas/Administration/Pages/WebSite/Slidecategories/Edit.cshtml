@model WebsiteManagement.Application.Contracts.SlideCategory.EditSlidecategory
@{
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">ویرایش اسلایدر : @Model.Name</h4>
</div>

<form asp-page="./Index" asp-page-handler="Edit"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
      enctype="multipart/form-data">
    <div class="modal-body">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="Name" class="control-label">نام</label>
                    <input type="text" class="form-control" asp-for="Name" onchange="fillField('Name','PictureTitle')">
                    <span asp-validation-for="Name" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="PictureTitle" class="control-label">عنوان</label>
                    <input type="text" class="form-control" asp-for="PictureTitle">
                    <span asp-validation-for="PictureTitle" class="error"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label  asp-for="PictureUrl" class="control-label"> عکس</label>
                    <input type="file" class="form-control" asp-for="PictureUrl" >
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="PictureAlt" class="control-label">Alt</label>
                    <input type="text" class="form-control" asp-for="PictureAlt">
                    <span asp-validation-for="PictureAlt" class="error"></span>
                </div>
            </div>
        </div>
        

        <hr />
        <div class="row pb-2 pt-2">
        <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="col-sm-offset-3 col-sm-9">
                        <div class="checkbox checkbox-primary">
                            <input type="checkbox" class="form-control" asp-for="HavePriceInfo" id="checkPrice">
                            <label asp-for="HavePriceInfo">دارای نمایش قیمت باشد</label>
                        </div>
                    </div>
                </div>
        </div>
        </div>
        

        <div class="row" id="TitrHavePrice">
            <div id="PriceShow" class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ShowLastPriceHead" class="control-label">سر تیتر نمایش قیمت</label>
                        <input type="text" class="form-control" id="checkPriceTitr" asp-for="ShowLastPriceHead">
                        <span asp-validation-for="ShowLastPriceHead" class="error"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="ShowLastPrice" class="control-label"> قیمت نمایش داده شده </label>
                        <input type="text" id="txtPriceShow" class="form-control" asp-for="ShowLastPrice">
                        <span asp-validation-for="ShowLastPrice" class="error"></span>
                    </div>
                </div>
            </div>
        </div>

     
        <div class="row" id="TitrWitoutPrice">
            <div class="col-md-6">
                <div class="form-group no-margin">
                    <label asp-for="Heading" class="control-label">سر تیتر</label>
                    <textarea class="form-control autogrow" asp-for="Heading" 
                              style="height: 104px; overflow: hidden; resize: horizontal; word-wrap: break-word;"></textarea>
                    @*<span asp-validation-for="PictureDiscryption" class="error"></span>*@
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group no-margin">
                    <label asp-for="HeadingDescryption" class="control-label">توضیحات سر تیتر</label>
                    <textarea class="form-control autogrow" asp-for="HeadingDescryption"
                              style="height: 104px; overflow: hidden; resize: horizontal; word-wrap: break-word;"></textarea>
                    @*<span asp-validation-for="PictureDiscryption" class="error"></span>*@
                </div>
            </div>
        </div>

        <input type="hidden" asp-for="Id" value="@Model.Id" />

    </div>

    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">ویرایش</button>
    </div>
</form>


<script type="text/javascript">

    $('#PictureUrl').valid();

    $(function () {
        $('#checkPrice').change(function () {

            myFunction();
        });
    });
    $(document).ready(function () {
        myFunction();
    });

    function myFunction() {
        $('#TitrHavePrice').toggle($('#checkPrice').is(':checked'));
        //$('#titr1').val("");
        //$('#titr2').val("");
        $('#TitrWitoutPrice').toggle($('#checkPrice').is(':unchecked'));
        //$('#checkPriceTitr').val("");
        //$('#txtPriceShow').val("");
        
    }

    

 

</script>