@page
@model ServiceHost.Areas.Administration.Pages.WebSite.Slidecategories.IndexModel

@{
    Layout = "Shared/_AdminLayout";
    ViewData["Title"] = "مدیریت اسلاید های صفحه اصلی";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right">@ViewData["Title"]</h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" href="#showmodal=@Url.Page("./Index", "Create")">ایجاد اسلاید جدید</a>
        </p>
    </div> 
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در اسلایدها</h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="SearchModel.Name"></label>
                        <input class="form-control" asp-for="SearchModel.Name" placeholder="نام اسلاید">
                    </div>
                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10" asp-page="./Index">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" >
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست اسلاید های صفحه اصلی وب سایت</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table-responsive table table-striped table-bordered align-content-center align-items-center ">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>نام عکس</th>
                                    <th>موضوع عکس</th>
                                    <th>سر تیتر</th>
                                    <th>توضیح سر تیتر</th>
                                    <th>  نمایش قیمت پایانی </th>
                                    <th>تاریخ ایجاد</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.slideCategories)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td class="text-center">
                                            <img src="~/Pics/SlidePics/@item.PictureUrl" style="height:100%; width:100%;" />
                                        </td>
                                        <td>@item.Name</td>
                                        <td>@item.PictureTitle</td>
                                        <td>@item.Heading</td>
                                        <td style="width:300px;">@item.HeadingDescryption</td>
                                        <td style="width:200px;" class="text-center">
                                            @if (@item.HavePriceInfo)
                                            {
                                                <i class="fa fa-check fa-3x text-success"></i>
                                            }
                                            else
                                            {
                                                <i class="fa fa-remove fa-3x text-danger"></i>
                                            }
                                        </td>
                                        <td>@item.CreationDate</td>
                                        <td style="width:250px;">
                                            <a class="btn btn-warning waves-effect waves-light m-b-5"
                                               href="#showmodal=@Url.Page("./Index", "Edit", new { id = item.Id })">
                                                <i class="fa fa-edit"></i>ویرایش
                                            </a>
                                            @if (!item.IsRemoved)
                                            {
                                                <a asp-page="./Index" asp-page-handler="Remove" asp-route-id="@item.Id"
                                                   class="btn btn-danger waves-effect waves-light m-b-5">
                                                    حذف
                                                </a>
                                            }
                                            else
                                            {
                                                <a asp-page="./Index" asp-page-handler="Restore" asp-route-id="@item.Id"
                                                   class="btn btn-success waves-effect waves-light m-b-5">
                                                    فعال سازی
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminThem/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminThem/assets/datatables/dataTables.bootstrap.js"></script>
    

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}